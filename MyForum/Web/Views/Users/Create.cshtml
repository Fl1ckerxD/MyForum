@using MyForum.Web.ViewModels
@model UserViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="registration-form">
    <h2>Регистрация</h2>
    <form method="POST" asp-controller="Users" asp-action="Create">
        <div>
            <label asp-for="Username">Имя</label>
            <input asp-for="Username" />
        </div>

        <div>
            <label asp-for="Email">Почта</label>
            <input asp-for="Email" />
        </div>

        <div>
            <label asp-for="Password">Пароль</label>
            <input type="password" asp-for="Password" />
        </div>

        <div>
            <label asp-for="PasswordConfirm">Повторите пароль</label>
            <input type="password" asp-for="PasswordConfirm" />
        </div>

        <div class="error-message" asp-validation-summary="All"></div>

        <div>
            <input type="submit" value="Создать" />
        </div>
    </form>
</div>

