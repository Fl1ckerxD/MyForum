@model Topic
@{
    ViewData["Title"] = Model.Title;
}
<main>
    <section class="text-center">
        <h1>@Model.Title</h1>
        <p>@Model.Content</p>
        <p>@Model.User.Username</p>
        <p>@Model.Posts.Count</p>
    </section>
    @if (User.Identity.IsAuthenticated)
    {
        <section>
            <div>
                <form method="post" asp-action="Comment" asp-controller="Posts" asp-route-topicId="@Model.Id" asp-route-categoryName="@Model.Category.Name">
                    <div>
                        <label>Комментарий:</label>
                        <textarea name="content"></textarea>
                        <div class="error-message" asp-validation-summary="All"></div>
                    </div>

                    <div>
                        <input type="submit" value="Создать" />
                    </div>
                </form>
            </div>
        </section>
    }
    <section>
        <div class="table-bordered">
            <ul class="navbar-nav flex-grow-1">
                @foreach (var post in @Model.Posts)
                {
                    <li>
                        <label>Автор: <strong>@post.User.Username</strong></label>
                        @if (@post.UserId == User.GetUserId())
                        {
                            <form asp-controller="Posts" asp-action="Delete" asp-route-postId="@post.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                            </form>
                        }
                        <p>@post.Content</p>
                        <label>Лайки: @post.Likes.Count</label>

                        <form asp-controller="Posts" asp-action="Like" asp-route-postId="@post.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-primary">Лайкнуть</button>
                        </form>
                    </li>
                }
            </ul>
        </div>
    </section>
</main>
